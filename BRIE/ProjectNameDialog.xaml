<Window x:Class="BRIE.ProjectNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BRIE"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="ProjectNameDialog" Height="100" Width="500">
    <Grid>
        <StackPanel Margin="30 16 30 10">
            <TextBlock Text="Project Name:" FontWeight="Bold" FontSize="16"/>
            <TextBox Margin="0 10 0 5 " x:Name="iptName"/>
            <Button HorizontalAlignment="Right" Padding="6 0" Content="Create" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
