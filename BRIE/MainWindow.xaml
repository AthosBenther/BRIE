<Window x:Class="BRIE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeamNG Roads Importer and Exporter" Height="800" Width="1400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="2*" MinWidth="300px"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="2" Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>
                <StackPanel Margin="8">
                    <TextBlock Height="22">GeoJson</TextBlock>
                    <TextBlock Height="22">HeightMap</TextBlock>
                    <TextBlock Height="22">SatMap</TextBlock>
                    <TextBlock Height="22">Max Elevation</TextBlock>
                    <TextBlock Height="22">Min Elevation</TextBlock>
                    <TextBlock Height="22">Map Size</TextBlock>
                </StackPanel>
                <StackPanel Margin="8" Grid.Column="1">
                    <TextBox x:Name="txtGeoJson" IsEnabled="false" Height="18" Margin="8 2">alala</TextBox>
                    <TextBox x:Name="txtHm"  IsEnabled="false" Height="18" Margin="8 2"></TextBox>
                    <TextBox x:Name="txtSi"  IsEnabled="false" Height="18" Margin="8 2"></TextBox>
                    <TextBox x:Name="iptMaxElev" Height="18" Margin="8 2"></TextBox>
                    <TextBox x:Name="iptMinElev" Height="18" Margin="8 2"></TextBox>
                    <ComboBox Margin="8 2" Width="53px" HorizontalAlignment="Left">
                        <ComboBoxItem IsSelected="true" Selected="CanvasSize_Selected" Tag="1024">1024</ComboBoxItem>
                        <ComboBoxItem Selected="CanvasSize_Selected" Tag="2048">2048</ComboBoxItem>
                        <ComboBoxItem Selected="CanvasSize_Selected" Tag="4096">4096</ComboBoxItem>
                        <ComboBoxItem Selected="CanvasSize_Selected" Tag="8196">8196</ComboBoxItem>
                    </ComboBox>

                </StackPanel>
                <StackPanel Margin="8" Grid.Column="2">

                    <!-- StackPanel -->
                    <StackPanel Margin="0 3" Orientation="Horizontal">
                        <!-- Button with eye icon -->
                        <Button Name="roadsVis" Width="20" Content="&#xE7B3;" FontFamily="Segoe MDL2 Assets" Click="canvasVis_Click" />
                        <!-- Button with folder icon -->
                        <Button Width="20" Margin="8 0 0 0" Content="&#xE188;" FontFamily="Segoe MDL2 Assets" Click="OpenGeoJSON_Click"/>
                    </StackPanel>
                    <StackPanel Margin="0 3" Orientation="Horizontal">
                        <!-- Button with eye icon -->
                        <Button Name="hmVis" Width="20" Content="&#xE7B3;" FontFamily="Segoe MDL2 Assets" Click="canvasVis_Click"/>
                        <!-- Button with folder icon -->
                        <Button Width="20" Margin="8 0 0 0" Content="&#xE188;" FontFamily="Segoe MDL2 Assets" Click="OpenHeightMap_Click"/>
                    </StackPanel>
                    <StackPanel Margin="0 3" Orientation="Horizontal">
                        <!-- Button with eye icon -->
                        <Button Name="siVis" Width="20" Content="&#xE7B3;" FontFamily="Segoe MDL2 Assets" Click="canvasVis_Click"/>
                        <!-- Button with folder icon -->
                        <Button Width="20" Margin="8 0 0 0" Content="&#xE188;" FontFamily="Segoe MDL2 Assets" Click="OpenSatMap_Click"/>
                    </StackPanel>



                </StackPanel>
            </Grid>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Wrap the canvas inside a ScrollViewer -->
            <ScrollViewer x:Name="scrl" VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="auto">
                <Grid>
                    <Canvas x:Name="drawingCanvas" MouseWheel="Canvas_MouseWheel" Background="Transparent" Width="2048" Height="2048" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="2048" Height="2048" Background="#FFE2E2E2"/>
                        <Canvas x:Name="siCanvas"    Width="2048" Height="2048" Background="Transparent"/>
                        <Canvas x:Name="hmCanvas"    Width="2048" Height="2048" Background="Transparent"/>
                        <Canvas x:Name="roadsCanvas" Width="2048" Height="2048" Background="Transparent"/>
                        <Canvas x:Name="linesCanvas" Width="2048" Height="2048" Background="Transparent"/>
                    </Canvas>
                </Grid>
            </ScrollViewer>
        </Grid>
        <GridSplitter HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Width="5"/>
    </Grid>
</Window>
